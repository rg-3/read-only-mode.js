{
  "manifest_version": 2,
  "name": "Read Only Mode",
  "description": "A browser extension that modifies the Twitter website to have a read only mode, where you can't author tweets or replies.",
  "version": "0.1.0",
  "permissions": [],
  "icons": {"128": "images/icon128.png"},
  "background": {"page": "html/background.html"},
  "browser_action": {"default_popup": "html/settings-page.html"},
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["/js/content-scripts/content-script.js"],
      "run_at": "document_start"
    }
  ]
}
